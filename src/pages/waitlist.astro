---
import BaseLayout from "../layouts/BaseLayout.astro";
---
<BaseLayout>
  <section class="bg-white pt-20 text-text-primary">
    <div class="max-w-7xl mx-auto px-8 md:px-12 lg:px-24">
      <div class="text-center mb-16 flex flex-col items-center">
        <div class="mb-6">
          <!-- Illustration/Icon -->
          <img src="/logo.svg" alt="Process Logo" class="w-20 h-20 mx-auto" />
        </div>
        <h2
          class="text-xl leading-tight tracking-tight sm:text-2xl md:text-3xl capitalize lg:text-4xl mt-4 font-semibold lg:text-balance text-text-primary">
          Your Healing Journey, Supported by AI
        </h2>
        <p class="text-base leading-normal mt-4 font-medium max-w-2xl mx-auto text-text-secondary">
          Process is the first app designed for complex trauma survivors, offering personalized, trauma-informed emotional support. Sign up to be the first to try it.
        </p>
      </div>

      <!-- What to Expect Section -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 relative gap-8 lg:gap-12 max-lg:divide-y lg:divide-x divide-blue-200 divide-dashed mb-16">
        <!-- Early Access -->
        <div class="relative z-10 bg-white text-center md:text-left pt-6 md:pe-10 lg:py-0 pb-10 last:pb-0 last:pe-0">
          <div class="w-12 h-12 rounded-full text-white font-bold flex items-center justify-center mx-auto md:mx-0 mb-6 bg-primary">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-text-primary">
            Early Access
          </h3>
          <p class="text-base leading-relaxed text-text-secondary">
            Be among the first to experience trauma-informed AI support designed specifically for complex trauma survivors.
          </p>
        </div>
        <!-- Special Pricing -->
        <div class="relative z-10 bg-white text-center md:text-left pt-6 md:pe-10 lg:py-0 pb-10 last:pb-0 last:pe-0">
          <div class="w-12 h-12 rounded-full text-white font-bold flex items-center justify-center mx-auto md:mx-0 mb-6 bg-secondary">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m4 0H3a2 2 0 00-2 2v12a2 2 0 002 2h18a2 2 0 002-2V6a2 2 0 00-2-2z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-text-primary">
            Special Pricing
          </h3>
          <p class="text-base leading-relaxed text-text-secondary">
            Exclusive launch pricing for waitlist members. Get premium features at a fraction of the regular cost.
          </p>
        </div>
        <!-- Shape the Future -->
        <div class="relative z-10 bg-white text-center md:text-left pt-6 md:pe-10 lg:py-0 pb-10 last:pb-0 last:pe-0">
          <div class="w-12 h-12 rounded-full text-white font-bold flex items-center justify-center mx-auto md:mx-0 mb-6 bg-accent">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-text-primary">
            Shape the Future
          </h3>
          <p class="text-base leading-relaxed text-text-secondary">
            Help us build the best possible experience by sharing your feedback as an early user.
          </p>
        </div>
      </div>

      <!-- Waitlist Form (wider) -->
      <div class="max-w-2xl w-full mx-auto mb-16">
        <div id="waitlist-form-container">
          <div class="p-6 rounded-lg bg-bg-secondary">
            <h3 class="text-lg font-semibold mb-2 text-text-primary">
              Join the Waitlist
            </h3>
            <p class="text-base mb-4 text-text-secondary">
              Get early access and be notified when Process launches. Your spot is reserved.
            </p>
            <!-- Error Message -->
            <div id="waitlist-error" class="mb-4 p-3 bg-red-50 border border-red-200 rounded-lg hidden">
              <p class="text-sm text-red-600"></p>
            </div>
            <form id="waitlist-form" class="space-y-4">
              <div>
                <label for="email" class="block text-sm font-medium mb-2 text-text-primary">
                  Email Address
                </label>
                <input
                  type="email"
                  id="waitlist-email"
                  name="email"
                  required
                  placeholder="your@email.com"
                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:outline-none transition-all duration-200 focus:ring-primary focus:border-primary"
                />
              </div>
              <button
                type="submit"
                id="waitlist-submit"
                class="w-full flex items-center justify-center transition-all duration-200 focus:ring-2 focus:outline-none text-white h-12 px-6 py-3 text-base font-medium rounded-lg disabled:opacity-50 disabled:cursor-not-allowed bg-primary hover:bg-primary-dark"
              >
                <span id="waitlist-submit-text">Join the Community</span>
                <span id="waitlist-loading" class="hidden flex items-center">
                  <svg class="animate-spin -ml-1 mr-3 h-4 w-4 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                  Joining...
                </span>
              </button>
            </form>
            <div class="mt-4 text-center text-sm text-accent font-semibold">
              Top 50 signups get exclusive early access.
            </div>
          </div>
        </div>
        <div id="waitlist-success" class="hidden p-6 rounded-lg text-center bg-bg-secondary">
          <div class="w-12 h-12 mx-auto mb-4 rounded-full flex items-center justify-center bg-accent">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <h3 class="text-lg font-semibold mb-2 text-text-primary">
            You're on the list!
          </h3>
          <p class="text-base mb-4 text-text-secondary">
            Thank you for joining our waitlist. We'll email you as soon as Process is ready.
          </p>
          <p class="text-sm text-text-muted">
            Check your email for confirmation details.
          </p>
        </div>
      </div>
    </div>
  </section>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const form = document.getElementById('waitlist-form');
      const emailInput = document.getElementById('waitlist-email');
      const submitBtn = document.getElementById('waitlist-submit');
      const submitText = document.getElementById('waitlist-submit-text');
      const loadingSpan = document.getElementById('waitlist-loading');
      const errorDiv = document.getElementById('waitlist-error');
      const errorMsg = errorDiv.querySelector('p');
      const successDiv = document.getElementById('waitlist-success');
      const formContainer = document.getElementById('waitlist-form-container');

      form.addEventListener('submit', async function (e) {
        e.preventDefault();
        errorDiv.classList.add('hidden');
        submitBtn.disabled = true;
        submitText.classList.add('hidden');
        loadingSpan.classList.remove('hidden');
        try {
          const response = await fetch('/api/waitlist', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email: emailInput.value })
          });
          const data = await response.json();
          if (data.success) {
            formContainer.classList.add('hidden');
            successDiv.classList.remove('hidden');
          } else {
            errorMsg.textContent = data.error || 'Something went wrong. Please try again.';
            errorDiv.classList.remove('hidden');
          }
        } catch (err) {
          errorMsg.textContent = 'Network error. Please check your connection and try again.';
          errorDiv.classList.remove('hidden');
        } finally {
          submitBtn.disabled = false;
          submitText.classList.remove('hidden');
          loadingSpan.classList.add('hidden');
        }
      });
    });
  </script>
</BaseLayout>