<header class="bg-white border-b border-black/5">
  <div class="w-full mx-auto lg:px-12 px-8 max-w-7xl lg:px-16">
    <div
      class="relative flex flex-col w-full py-5 mx-auto bg-white lg:items-center lg:justify-between lg:flex-row lg:px-6">
      <div class="flex flex-row items-center justify-between lg:justify-start">
        <a href="/" class="text-black inline-flex items-center gap-3">
          <img width="40" src="/logo.svg" alt="logo" />
          <span class="font-bold font-display">Process</span>
        </a>
        <button
          id="mobile-menu-toggle"
          aria-expanded="false"
          aria-controls="main-navigation"
          aria-label="Toggle navigation menu"
          class="inline-flex items-center justify-center p-2 text-base-400 hover:text-black focus:outline-none focus:text-black lg:hidden">
          <svg
            id="mobile-menu-icon"
            class="w-6 h-6 transition-transform duration-300 ease-in-out"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24">
            <path
              id="menu-icon-path"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16">
            </path>
          </svg>
        </button>
      </div>
      <nav
        id="main-navigation"
        class="flex-col items-center flex-grow gap-4 lg:gap-8 flex overflow-hidden lg:pb-0 lg:flex lg:justify-end lg:h-auto lg:flex-row transition-[height] duration-300"
      >
        <a
          class="text-sm text-black transition duration-300 hover:text-primary lg:ml-auto"
          href="/#features">
          Features
        </a>
        <a
          href="/pricing"
          class="text-sm text-black transition duration-300 hover:text-primary relative">
          Pricing
        </a>
        <a
          href="/waitlist"
          class="text-sm text-black transition duration-300 hover:text-primary relative">
          Waitlist
          <span
            class="bg-blue-500 ms-1 text-white text-[10px] px-2 py-1 rounded-full">
            JOIN
          </span>
        </a>
        <a
          href="/faq"
          class="text-sm text-black transition duration-300 hover:text-primary relative">
          FAQ
        </a>
        <div class="mobile-auth-links flex-col w-full gap-0 lg:flex-row lg:gap-2 inline-flex items-stretch list-none py-px lg:ml-auto">
          <a
            href="/waitlist"
            class="text-sm text-black transition duration-300 hover:text-primary w-full text-left px-0 py-3 lg:bg-primary-light lg:text-white lg:hover:bg-primary lg:rounded-md lg:px-4 lg:py-2 lg:text-xs lg:font-medium lg:h-8 lg:w-auto">
            Sign up
          </a>
          <a
            href="/login"
            class="text-sm text-black transition duration-300 hover:text-primary w-full text-left px-0 py-3 lg:bg-base-50 lg:text-base-700 lg:hover:bg-white lg:focus:ring-2 lg:focus:outline-none lg:focus:ring-base-500/50 lg:h-8 lg:px-4 lg:py-2 lg:text-xs lg:font-medium lg:rounded-md lg:w-auto">
            Log in
          </a>
        </div>
      </nav>
    </div>
  </div>
  <script type="text/javascript">
    (() => {
      const menuToggle = document.getElementById('mobile-menu-toggle');
      const nav = document.getElementById('main-navigation');
      const menuIconPath = document.getElementById('menu-icon-path');
      let isOpen = false;

      // Helper to update menu state
      function setMenu(open) {
        isOpen = open;
        menuToggle.setAttribute('aria-expanded', open.toString());
        if (window.innerWidth < 1024) {
          if (open) {
            nav.style.transform = 'translateX(0)';
            nav.style.height = '100vh';
            nav.style.width = '80vw';
            nav.style.maxWidth = '320px';
            nav.style.position = 'fixed';
            nav.style.top = '0';
            nav.style.left = '0';
            nav.style.background = '#fff';
            nav.style.boxShadow = '2px 0 24px rgba(60,90,130,0.08)';
            nav.style.zIndex = '2002';
            nav.style.transition = 'transform 0.3s cubic-bezier(0.4,0,0.2,1)';
            nav.style.overflowY = 'auto';
            nav.style.display = 'flex';
            nav.style.flexDirection = 'column';
            nav.style.padding = '2rem 1.5rem 1.5rem 1.5rem';
            nav.style.gap = '0.5rem';
            document.body.style.overflow = 'hidden';
            menuIconPath.setAttribute('d', 'M6 18L18 6M6 6l12 12'); // X icon
          } else {
            nav.style.transform = 'translateX(-120%)';
            nav.style.height = '';
            nav.style.width = '';
            nav.style.maxWidth = '';
            nav.style.position = '';
            nav.style.top = '';
            nav.style.left = '';
            nav.style.background = '';
            nav.style.boxShadow = '';
            nav.style.zIndex = '';
            nav.style.transition = '';
            nav.style.overflowY = '';
            nav.style.display = '';
            nav.style.flexDirection = '';
            nav.style.padding = '';
            nav.style.gap = '';
            document.body.style.overflow = '';
            menuIconPath.setAttribute('d', 'M4 6h16M4 12h16M4 18h16'); // Hamburger
          }
        } else {
          nav.style.height = '';
          nav.style.transform = '';
          nav.style.width = '';
          nav.style.maxWidth = '';
          nav.style.position = '';
          nav.style.top = '';
          nav.style.left = '';
          nav.style.background = '';
          nav.style.boxShadow = '';
          nav.style.zIndex = '';
          nav.style.transition = '';
          nav.style.overflowY = '';
          nav.style.display = '';
          nav.style.flexDirection = '';
          nav.style.padding = '';
          nav.style.gap = '';
          document.body.style.overflow = '';
          menuIconPath.setAttribute('d', 'M4 6h16M4 12h16M4 18h16'); // Hamburger
        }
      }

      // Toggle menu on button click
      menuToggle.addEventListener('click', (e) => {
        e.stopPropagation();
        setMenu(!isOpen);
      });

      // Close menu when clicking a nav link (on mobile)
      nav.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          if (window.innerWidth < 1024) setMenu(false);
        });
      });

      // Close menu when clicking outside
      document.addEventListener('click', (e) => {
        if (isOpen && window.innerWidth < 1024) {
          if (!nav.contains(e.target) && !menuToggle.contains(e.target)) {
            setMenu(false);
          }
        }
      });

      // Responsive: close menu on resize to desktop
      window.addEventListener('resize', () => {
        if (window.innerWidth >= 1024) setMenu(false);
      });

      // On load, ensure nav is visible on desktop
      if (window.innerWidth >= 1024) {
        nav.style.height = '';
      }
    })();
  </script>
  <style>
    @media (max-width: 1023px) {
      #main-navigation {
        transform: translateX(-120%);
        transition: transform 0.3s cubic-bezier(0.4,0,0.2,1);
        width: 80vw;
        max-width: 320px;
        position: fixed;
        top: 0;
        left: 0;
        background: #fff;
        box-shadow: 2px 0 24px rgba(60,90,130,0.08);
        z-index: 2002;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        padding: 2rem 1.5rem 1.5rem 1.5rem;
        gap: 0.5rem;
        height: 100vh;
        min-height: 100vh;
        max-height: 100vh;
      }
      .mobile-auth-links {
        flex-direction: column !important;
        width: 100% !important;
        gap: 0 !important;
        align-items: stretch !important;
      }
      .mobile-auth-links a {
        width: 100% !important;
        text-align: left !important;
        padding: 0 !important;
        margin: 0 !important;
        border-radius: 0 !important;
        background: none !important;
        color: #121212 !important;
        font-weight: 500 !important;
        font-size: 1rem !important;
        box-shadow: none !important;
        height: auto !important;
      }
    }
  </style>
</header>