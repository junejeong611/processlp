<header class="bg-white border-b border-black/5">
  <div class="w-full mx-auto lg:px-12 px-8 max-w-7xl lg:px-16">
    <div
      class="relative flex flex-col w-full py-5 mx-auto bg-white lg:items-center lg:justify-between lg:flex-row lg:px-6">
      <div class="flex flex-row items-center justify-between lg:justify-start">
        <a href="/" class="text-black inline-flex items-center gap-3">
          <img width="40" src="/logo.svg" alt="logo" />
          <span class="font-bold font-display">Process</span>
        </a>
        <button
          id="mobile-menu-toggle"
          aria-expanded="false"
          aria-controls="main-navigation"
          aria-label="Toggle navigation menu"
          class="inline-flex items-center justify-center p-2 text-base-400 hover:text-black focus:outline-none focus:text-black lg:hidden">
          <svg
            id="mobile-menu-icon"
            class="w-6 h-6 transition-transform duration-300 ease-in-out"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24">
            <path
              id="menu-icon-path"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16">
            </path>
          </svg>
        </button>
      </div>
      <nav
        id="main-navigation"
        class="flex flex-col lg:flex-row items-center flex-grow gap-4 lg:gap-8 overflow-hidden lg:pb-0 lg:justify-end lg:h-auto transition-[height] duration-300"
      >
        <a
          class="text-sm text-black transition duration-300 hover:text-primary lg:ml-auto"
          href="/#features">
          Features
        </a>
        <a
          href="/pricing"
          class="text-sm text-black transition duration-300 hover:text-primary relative">
          Pricing
        </a>
        <a
          href="/waitlist"
          class="text-sm text-black transition duration-300 hover:text-primary relative">
          Waitlist
          <span
            class="bg-blue-500 ms-1 text-white text-[10px] px-2 py-1 rounded-full">
            JOIN
          </span>
        </a>
        <a
          href="/faq"
          class="text-sm text-black transition duration-300 hover:text-primary relative">
          FAQ
        </a>
        <div class="mobile-auth-links flex-col w-full gap-0 lg:flex-row lg:gap-2 inline-flex items-stretch list-none py-px lg:ml-auto">
          <a
            href="/waitlist"
            class="flex items-center justify-center transition px-4 py-2 w-full sm:w-auto rounded-md bg-primary-light text-white hover:bg-primary text-xs font-medium h-8 mb-2 lg:mb-0 lg:mr-2 lg:w-auto">
            Sign up
          </a>
          <a
            href="#"
            tabindex="-1"
            aria-disabled="true"
            class="text-sm text-black/40 cursor-not-allowed opacity-60 w-full text-left px-0 py-3 lg:bg-base-50 lg:text-base-700 lg:hover:bg-base-50 lg:focus:ring-0 lg:focus:outline-none lg:h-8 lg:px-4 lg:py-2 lg:text-xs lg:font-medium lg:rounded-md lg:w-auto select-none"
            onclick="return false;">
            Log in
          </a>
        </div>
      </nav>
    </div>
  </div>
  <script type="text/javascript">
    (() => {
      const menuToggle = document.getElementById('mobile-menu-toggle');
      const nav = document.getElementById('main-navigation');
      const menuIconPath = document.getElementById('menu-icon-path');
      let isOpen = false;

      // Helper to update menu state
      function setMenu(open) {
        isOpen = open;
        menuToggle.setAttribute('aria-expanded', open.toString());
        if (window.innerWidth < 1024) {
          if (open) {
            nav.classList.add('nav-mobile-drawer');
            nav.style.transform = 'translateX(0)';
            document.body.style.overflow = 'hidden';
            menuIconPath.setAttribute('d', 'M6 18L18 6M6 6l12 12'); // X icon
          } else {
            nav.classList.remove('nav-mobile-drawer');
            nav.style.transform = 'translateX(-120%)';
            document.body.style.overflow = '';
            menuIconPath.setAttribute('d', 'M4 6h16M4 12h16M4 18h16'); // Hamburger
          }
        } else {
          nav.classList.remove('nav-mobile-drawer');
          nav.style.transform = '';
          document.body.style.overflow = '';
          menuIconPath.setAttribute('d', 'M4 6h16M4 12h16M4 18h16'); // Hamburger
        }
      }

      // Toggle menu on button click
      menuToggle.addEventListener('click', (e) => {
        e.stopPropagation();
        setMenu(!isOpen);
      });

      // Close menu when clicking a nav link (on mobile)
      nav.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          if (window.innerWidth < 1024) setMenu(false);
        });
      });

      // Close menu when clicking outside
      document.addEventListener('click', (e) => {
        if (isOpen && window.innerWidth < 1024) {
          if (!nav.contains(e.target) && !menuToggle.contains(e.target)) {
            setMenu(false);
          }
        }
      });

      // Responsive: close menu on resize to desktop
      window.addEventListener('resize', () => {
        if (window.innerWidth >= 1024) setMenu(false);
      });

      // On load, ensure nav is visible on desktop
      if (window.innerWidth >= 1024) {
        nav.style.height = '';
      }
    })();
  </script>
  <style>
    @media (max-width: 1023px) {
      #main-navigation.nav-mobile-drawer {
        transform: translateX(0);
        transition: transform 0.3s cubic-bezier(0.4,0,0.2,1);
        width: 80vw;
        max-width: 320px;
        position: fixed;
        top: 0;
        left: 0;
        background: #fff;
        box-shadow: 2px 0 24px rgba(60,90,130,0.08);
        z-index: 2002;
        overflow-y: auto;
        display: flex;
        flex-direction: column;
        padding: 2rem 1.5rem 1.5rem 1.5rem;
        gap: 0.5rem;
        height: 100vh;
        min-height: 100vh;
        max-height: 100vh;
      }
      #main-navigation {
        transform: translateX(-120%);
        transition: transform 0.3s cubic-bezier(0.4,0,0.2,1);
      }
      .mobile-auth-links {
        flex-direction: column !important;
        width: 100% !important;
        gap: 0 !important;
        align-items: stretch !important;
      }
      .mobile-auth-links a {
        width: 100% !important;
        text-align: left !important;
        padding: 0 !important;
        margin: 0 !important;
        border-radius: 0 !important;
        background: none !important;
        color: #121212 !important;
        font-weight: 500 !important;
        font-size: 1rem !important;
        box-shadow: none !important;
        height: auto !important;
      }
    }
    @media (min-width: 1024px) {
      #main-navigation {
        transform: none !important;
        position: static !important;
        width: auto !important;
        max-width: none !important;
        height: auto !important;
        min-height: 0 !important;
        max-height: none !important;
        background: none !important;
        box-shadow: none !important;
        z-index: auto !important;
        overflow: visible !important;
        display: flex !important;
        flex-direction: row !important;
        padding: 0 !important;
        gap: 2rem !important;
      }
      .mobile-auth-links {
        flex-direction: row !important;
        width: auto !important;
        gap: 0.5rem !important;
        align-items: center !important;
      }
      .mobile-auth-links a {
        width: auto !important;
        text-align: center !important;
        padding: 0.5rem 1rem !important;
        margin: 0 !important;
        border-radius: 0.375rem !important;
        background: none !important;
        color: #121212 !important;
        font-weight: 500 !important;
        font-size: 0.875rem !important;
        box-shadow: none !important;
        height: 2rem !important;
      }
    }
  </style>
</header>